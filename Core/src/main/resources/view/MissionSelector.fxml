<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sdu.sem4.g7.UI.controllers.MissionSelectorController">

    <!-- Background image (optional) -->
    <ImageView fx:id="backgroundImage" fitHeight="800.0" fitWidth="800.0" />

    <Text layoutX="310.0" layoutY="80.0" style="-fx-font-size: 36px; -fx-fill: white;" text="Select Mission" />

    <!-- Mission 1 Button (Enabled) -->
    <Button layoutX="290.0" layoutY="150.0" prefWidth="220.0" prefHeight="60.0" text="Mission 1"
            onAction="#handleMission1"
            styleClass="button-custom" stylesheets="@IntroStyle.css" />

    <!-- Mission 2 Button (Disabled) -->
    <Button fx:id="mission2Button" layoutX="290.0" layoutY="230.0" prefWidth="220.0" prefHeight="60.0"
            text="Mission 2" disable="true"
            styleClass="button-custom" stylesheets="@IntroStyle.css" />

    <!-- Mission 3 Button (Disabled) -->
    <Button layoutX="290.0" layoutY="310.0" prefWidth="220.0" prefHeight="60.0" text="Mission 3" disable="true"
            styleClass="button-custom" stylesheets="@IntroStyle.css" />

    <!-- Back to Main Menu Button -->
    <Button layoutX="20.0" layoutY="730.0" prefWidth="120.0" prefHeight="40.0" text="Back"
            onAction="#handleBack"
            styleClass="button-custom" stylesheets="@IntroStyle.css" />

</AnchorPane>