<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="root" prefHeight="800.0" prefWidth="800.0"
            style="-fx-background-color: rgba(0,0,0,0.75);"
            stylesheets="@GameResult.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.sdu.sem4.g7.UI.controllers.PauseMenuController">

    <Pane prefWidth="400" prefHeight="400" layoutX="200" layoutY="200"
          styleClass="result-window">

        <Button layoutX="100" layoutY="100" prefWidth="200" prefHeight="60"
                text="Resume" onAction="#handleResumeGame"
                styleClass="button-ok" focusTraversable="false"/>
        <Button layoutX="100" layoutY="200" prefWidth="200" prefHeight="60"
                text="Restart" onAction="#handleRestartGame"
                styleClass="button-ok" focusTraversable="false"/>
        <Button layoutX="100" layoutY="300" prefWidth="200" prefHeight="60"
                text="Main Menu" onAction="#handleMainMenu"
                styleClass="button-ok" focusTraversable="false"/>
    </Pane>

</AnchorPane>
