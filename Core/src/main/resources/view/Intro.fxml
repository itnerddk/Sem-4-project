<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.effect.GaussianBlur?>
<AnchorPane prefHeight="800" prefWidth="800" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sdu.sem4.g7.UI.controllers.IntroController">

    <!-- Background -->
    <ImageView fx:id="backgroundImage" fitHeight="800" fitWidth="800" />

    <!-- Blurred Background (injected from controller) -->
    <ImageView fx:id="blurredSnapshot" layoutX="210" layoutY="360" fitWidth="380" fitHeight="250">
        <effect>
            <GaussianBlur radius="25"/>
        </effect>
    </ImageView>

    <!-- Panel Overlay (optional brightness) -->
    <Pane layoutX="210" layoutY="360" prefWidth="380" prefHeight="250"
          style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 20;" />


    <!-- Play Button -->
    <Button layoutX="247.0" layoutY="393.0" onAction="#handleStartGame" prefHeight="60.0" prefWidth="320.0" styleClass="button-custom" stylesheets="@IntroStyle.css" text="Play" />

    <!-- Settings Button -->
    <Button layoutX="247.0" layoutY="462.0" onAction="#handleSettings" prefHeight="60.0" prefWidth="320.0" styleClass="button-custom" stylesheets="@IntroStyle.css" text="Settings" />

    <!-- Credits Button -->
    <Button layoutX="247.0" layoutY="532.0" onAction="#handleCredits" prefHeight="60.0" prefWidth="155.0" styleClass="button-custom" stylesheets="@IntroStyle.css" text="Credits" />

    <!-- Quit Button -->
    <Button layoutX="414.0" layoutY="532.0" onAction="#handleQuitGame" prefHeight="60.0" prefWidth="155.0" styleClass="button-custom" stylesheets="@IntroStyle.css" text="Exit" />

</AnchorPane>
