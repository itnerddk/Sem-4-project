<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="mainMenuPane" prefHeight="800" prefWidth="800" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sdu.sem4.g7.UI.controllers.MainMenuController">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="800" fitWidth="800" preserveRatio="false" StackPane.alignment="CENTER"/>

    <!-- VBox for Buttons -->
    <VBox spacing="20" alignment="CENTER">
        <!-- Play Button -->
        <Button onAction="#handleStartGame" prefHeight="60.0" prefWidth="320.0" styleClass="button-custom" stylesheets="@MainMenuStyle.css" text="Play" />

        <!-- Settings Button -->
        <Button onAction="#handleSettings" prefHeight="60.0" prefWidth="320.0" styleClass="button-custom" stylesheets="@MainMenuStyle.css" text="Settings" />

        <!-- Credits Button -->
        <Button onAction="#handleCredits" prefHeight="60.0" prefWidth="155.0" styleClass="button-custom" stylesheets="@MainMenuStyle.css" text="Credits" />

        <!-- Quit Button -->
        <Button onAction="#handleQuitGame" prefHeight="60.0" prefWidth="155.0" styleClass="button-custom" stylesheets="@MainMenuStyle.css" text="Exit" />
    </VBox>
    
</StackPane>
