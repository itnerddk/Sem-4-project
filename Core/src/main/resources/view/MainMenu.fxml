<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>

<AnchorPane fx:controller="org.sdu.sem4.g7.UI.controllers.MainMenuController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="800"
            style="-fx-background-color: transparent;">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitWidth="800" fitHeight="800" preserveRatio="false" />


    <!-- Play Button -->
    <Button layoutX="320" layoutY="400" prefWidth="160" prefHeight="30"
            text="Play" onAction="#handleStartGame" />

    <!-- Settings Button -->
    <Button layoutX="320" layoutY="440" prefWidth="160" prefHeight="30"
            text="Settings" onAction="#handleSettings" />

    <!-- Credits Button -->
    <Button layoutX="320" layoutY="480" prefWidth="160" prefHeight="30"
            text="Credits" onAction="#handleCredits" />

    <!-- Quit Button -->
    <Button layoutX="320" layoutY="520" prefWidth="160" prefHeight="30"
            text="Quit Game" onAction="#handleQuitGame" />

</AnchorPane>
